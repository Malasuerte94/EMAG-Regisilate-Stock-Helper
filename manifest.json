{
    "manifest_version": 3,
    "name": "eMAG HELPER Resigilate",
    "description": "VerificÄƒ stocurile la resigilate",
    "version": "1.1",
    "icons": {
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "/js/background.js"
    },
    "permissions": ["commands", "storage", "notifications", "alarms", "activeTab"],
    "host_permissions": ["https://www.emag.ro/*"],
    "content_scripts": [
        {
            "matches": ["https://*.emag.ro/search/*"],
            "css": ["css/emagresigilatehelper.css"],
            "js": ["js/emagresigilatehelper.js"]
        }
    ]
}